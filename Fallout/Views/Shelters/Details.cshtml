@{
  Layout = "_Layout";
}

@model Fallout.Models.Shelter

<h2>Shelter Details</h2>
<hr />
<h3>@Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(model => model.Name)<h3>

@if(@Model.JoinEntities.Count == 0)
{
  <p>This category does not contain any survivors.</p>
}
else
{
  <h4>Survivors in this shelter:</h4>
  <ul>
    @foreach(var join in Model.JoinEntities)
    {
      <li>@join.Survivor.Description</li>
    }
  </ul>
}

<p>@Html.ActionLink("Back to Shelters", "Index")</p>
<p>@Html.ActionLink("Edit Shelter", "Edit", new { id = Model.ShelterId })</p>
<p>@Html.ActionLink("Delete Shelter", "Delete", new { id = Model.ShelterId })</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>