@{
  Layout = "_Layout";
}

@using Fallout.Models;
@model List<Fallout.Models.Survivor>;

<h1>Survivors</h1>

@if (@Model.Count == 0)
{
  <h3>No survivors have been added yet!</h3>
}

<ul class="list-group">
@foreach (Survivor survivor in Model)
{
  <li class="list-group-item">
    @Html.ActionLink($"{survivor.Description}", "Details", new { id = survivor.SurvivorId })
    @if (survivor.Completed == true)
    {
      <span> - completed</span>;
    }
  </li>
}
</ul>

<button>@Html.ActionLink("Add new survivor", "Create")</button>
<button>@Html.ActionLink("Home", "Index", "Home")</button>
